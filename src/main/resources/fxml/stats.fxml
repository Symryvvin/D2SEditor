<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ru.aizen.control.*?>
<AnchorPane stylesheets="@/css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.aizen.controller.StatsController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <VBox spacing="10.0">
            <HBox prefHeight="30.0" spacing="10.0">
                <Label text="Level"/>
                <NumericField fx:id="level" maxValue="99" prefWidth="50"/>
                <Label text="Experience"/>
                <NumericField fx:id="experience" maxValue="3520485255" prefWidth="100"/>
            </HBox>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="50.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="30.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="50.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                </rowConstraints>
                <Label text="Strength" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <NumericField fx:id="strength" maxValue="1023" GridPane.columnIndex="1"
                              GridPane.rowIndex="0"/>
                <Label text="Dexterity" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <NumericField fx:id="dexterity" maxValue="1023" GridPane.columnIndex="1"
                              GridPane.rowIndex="1"/>
                <Label text="Vitality" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <NumericField fx:id="vitality" maxValue="1023" GridPane.columnIndex="1"
                              GridPane.rowIndex="2"/>
                <Label text="Energy" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <NumericField fx:id="energy" maxValue="1023" GridPane.columnIndex="1"
                              GridPane.rowIndex="3"/>
                <Label text="HP" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <NumericField fx:id="hp" maxValue="8191" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Label text="MP" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <NumericField fx:id="mp" maxValue="8191" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Label text="SP" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <NumericField fx:id="sp" maxValue="8191" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            </GridPane>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="50.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                </rowConstraints>
                <Label text="Stat points" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <NumericField fx:id="statPoints" maxValue="1023" GridPane.columnIndex="1"
                              GridPane.rowIndex="0"/>
                <Label text="Skill points" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <NumericField fx:id="skillPoints" maxValue="255" GridPane.columnIndex="1"
                              GridPane.rowIndex="1"/>
            </GridPane>
            <HBox prefHeight="30.0" spacing="10.0">
                <Label text="Gold"/>
                <NumericField fx:id="gold" prefWidth="70"/>
                <Label text="Stash"/>
                <NumericField fx:id="goldInStash" prefWidth="70"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
