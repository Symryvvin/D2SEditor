<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ru.aizen.control.*?>
<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.162" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.aizen.controller.StatsController">
    <HBox prefHeight="30.0" spacing="10.0">
        <Label text="Level"/>
        <NumericField fx:id="level" maxValue="99" prefWidth="50.0"/>
        <Label text="Experience"/>
        <NumericField fx:id="experience" disable="true" maxValue="3520485255" prefWidth="150.0"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
        <GridPane vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="50.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
            </rowConstraints>
            <Label text="Strength"/>
            <Label text="Dexterity" GridPane.rowIndex="1"/>
            <Label text="Vitality" GridPane.rowIndex="2"/>
            <Label text="Energy" GridPane.rowIndex="3"/>
            <NumericField fx:id="strength" maxValue="1023" GridPane.columnIndex="1"/>
            <NumericField fx:id="dexterity" maxValue="1023" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <NumericField fx:id="vitality" maxValue="1023" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <NumericField fx:id="energy" maxValue="1023" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" prefWidth="70.0"/>
                <ColumnConstraints minWidth="10.0" prefWidth="80.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
            </rowConstraints>
            <Label text="Life"/>
            <NumericField fx:id="hp" maxValue="8191" GridPane.columnIndex="1"/>
            <Label text="Mana" GridPane.rowIndex="1"/>
            <NumericField fx:id="mp" maxValue="8191" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Stamina" GridPane.rowIndex="2"/>
            <NumericField fx:id="sp" maxValue="8191" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
    </HBox>
    <HBox>
        <children>
            <GridPane hgap="5.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="40.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="50.0"/>
                    <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="40.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="40.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                </rowConstraints>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Points remaining"
                       GridPane.columnSpan="4"/>
                <Label text="Skill" GridPane.rowIndex="1"/>
                <NumericField fx:id="skillPoints" maxValue="255" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <NumericField fx:id="statPoints" maxValue="1023" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label layoutX="26.0" layoutY="48.0" text="Stats" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </GridPane>
            <GridPane hgap="5.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="70.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="80.0"/>
                    <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="40.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="80.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                </rowConstraints>
                <children>
                    <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Gold" GridPane.columnSpan="4"/>
                    <Label text="Inventory" GridPane.rowIndex="1"/>
                    <Label layoutX="26.0" layoutY="48.0" text="Stash" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <NumericField fx:id="gold" prefWidth="70" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <NumericField fx:id="goldInStash" prefWidth="70" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                </children>
            </GridPane>
        </children>
    </HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
