<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.162"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.aizen.controller.MainController">
    <MenuBar prefHeight="25" stylesheets="@/css/menuBar.css" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
             AnchorPane.topAnchor="0">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#onOpenClick" text="Open">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#onSaveClick" text="Save"/>
            <MenuItem mnemonicParsing="false" text="Exit"/>
        </Menu>
    </MenuBar>
    <ButtonBar buttonMinWidth="40" prefHeight="55" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="25">
        <buttons>
            <Button fx:id="open" focusTraversable="false" maxHeight="32" maxWidth="32" onMouseClicked="#onOpenClick"
                    ButtonBar.buttonData="LEFT"/>
            <Button fx:id="save" disable="true" focusTraversable="false" maxHeight="32" maxWidth="32"
                    onMouseClicked="#onSaveClick" ButtonBar.buttonData="LEFT"/>
            <Button fx:id="backup" disable="true" focusTraversable="false" maxHeight="32" maxWidth="32"
                    onMouseClicked="#onBackupClick" ButtonBar.buttonData="LEFT"/>
            <Button fx:id="restore" disable="true" focusTraversable="false" maxHeight="32" maxWidth="32"
                    onMouseClicked="#onRestoreClick" ButtonBar.buttonData="LEFT"/>
            <Region HBox.hgrow="ALWAYS"/>
        </buttons>
    </ButtonBar>
    <TabPane fx:id="editorTabs" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
             AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80">
        <Tab disable="true" text="Stats">
            <fx:include source="editor.fxml"/>
        </Tab>
        <Tab disable="true" text="Skills">
            <fx:include source="skills.fxml"/>
        </Tab>
        <Tab disable="true" text="Hex Editor">
            <fx:include source="hex.fxml"/>
        </Tab>
    </TabPane>
</AnchorPane>
